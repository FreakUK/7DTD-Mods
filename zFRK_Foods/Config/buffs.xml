<FRK>
<set xpath="/buffs/buff[@name='buffYuccaJuiceSmoothie']//passive_effect[@name='HypothermalResist']/@name">HyperthermalResist</set>  

<append xpath="/buffs">
	<buff name="buffIcedDrink" name_key="buffIcedDrink" description_key="buffIcedDrinkDesc" icon="ui_game_symbol_coffee">
		<stack_type value="replace"/><duration value="0"/>
		<display_value value=".buffIcedDrinkDisplay"/><display_value_format value="time"/>
		<effect_group>
			<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$buffIcedDrinkDuration" operation="subtract" value="@$MetabolismDuration"/>
			<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar=".buffIcedDrinkDisplay" operation="set" value="@$buffIcedDrinkDuration"/>
			<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar=".buffIcedDrinkDisplay" operation="divide" value="@$MetabolismDuration"/>
		</effect_group>
		<effect_group>
			<triggered_effect trigger="onSelfBuffUpdate" action="RemoveBuff" buff="buffIcedDrink">
				<requirement name="CVarCompare" cvar="$buffIcedDrinkDuration" operation="LTE" value="0"/>
			</triggered_effect>
			<triggered_effect trigger="onSelfBuffRemove" action="ModifyCVar" cvar=".buffIcedDrinkDisplay" operation="set" value="0"/>
			<triggered_effect trigger="onSelfBuffRemove" action="ModifyCVar" cvar="$buffIcedDrinkDuration" operation="set" value="0"/>
		</effect_group>
		<effect_group>
			<passive_effect name="HyperthermalResist" operation="base_add" value="30"/>
		</effect_group>
	</buff>

</append>

</FRK>