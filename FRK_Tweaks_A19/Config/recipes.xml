<FRK>
	<remove xpath="/recipes/recipe[@name='medicalFirstAidBandage']"/>
	<remove xpath="/recipes/recipe[@name='resourceOil']"/>

		<!-- Make forge tools unlock with Advanced Engineering -->
	<append xpath="/recipes/recipe[@name='toolBellows']/@tags">,perkAdvancedEngineering</append>
	<append xpath="/recipes/recipe[@name='toolAnvil']/@tags">,perkAdvancedEngineering</append>
	<append xpath="/recipes">
		<recipe name="resourceOil" count="1" craft_area="chemistryStation" tags="perkGreaseMonkey,learnable,chemStationCrafting">
			<ingredient name="resourceOilShale" count="5"/>
			<ingredient name="drinkCanEmpty" count="1"/>
		</recipe>
	</append>
	<set xpath="/recipes/recipe[@name='resourceGlue' and @craft_area='chemistryStation']/@count">3</set>
	<append xpath="/recipes">
		<!-- Missing Recipes -->
		<recipe name="toolBeaker" material_based="true" count="1" craft_area="forge" craft_time="120" tags="learnable,perkAdvancedEngineering,forgeCrafting">
			<ingredient name="unit_clay" count="5"/>
			<ingredient name="unit_glass" count="50"/>
			<ingredient name="unit_lead" count="1"/>
		</recipe>
		<recipe name="resourceSewingKit" count="5" craft_area="workbench" tags="workbenchCrafting">
			<ingredient name="resourceCloth" count="2"/>
			<ingredient name="resourceScrapPolymers" count="1"/>
			<ingredient name="resourceScrapIron" count="1"/>
		</recipe>
		<recipe name="resourcePotassiumNitratePowder" count="150" craft_area="cementMixer">
			<ingredient name="resourceRockSmall" count="300"/>
			<ingredient name="resourceAcid" count="1"/>
		</recipe>
		<recipe name="resourceCoal" count="1" craft_area="campfire">
			<ingredient name="resourceWood" count="3"/>
		</recipe>
		<recipe name="resourceAcid" count="5" craft_area="chemistryStation">
			<ingredient name="foodRottingFlesh" count="10"/>
			<ingredient name="resourcePotassiumNitratePowder" count="1"/>
			<ingredient name="drinkJarGrainAlcohol" count="1"/>
			<ingredient name="drinkJarRiverWater" count="5"/>
		</recipe>
	</append>
	<append xpath="/recipes">
		<!-- Medical -->
		<recipe name="medicalFirstAidBandage" count="1" tags="learnable">
			<ingredient name="medicalAloeCream" count="1"/>
			<ingredient name="medicalBandage" count="1"/>
		</recipe>
	</append>
</FRK>